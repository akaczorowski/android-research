<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>

    <item name="windowActionModeOverlay">true</item>
    <item name="toolbarStyle">
      @style/Akac.Widget.AppCompat.Toolbar
    </item>

    <item name="toolbarNavigationButtonStyle">
      @style/Akac.Widget.AppCompat.Toolbar.Button.Navigation
    </item>

    <item name="actionOverflowButtonStyle">
      @style/Akac.Widget.AppCompat.ActionButton.Overflow
    </item>

    <item name="actionModeStyle">
      @style/Akac.Widget.AppCompat.ActionMode
    </item>
    <item name="actionModeCloseButtonStyle">
      @style/Akac.Widget.AppCompat.ActionButton.CloseMode
    </item>

  </style>

</resources>
